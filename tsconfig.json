{
  "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "ES2020",
      "strict": true,
      "sourceMap": true,
      "noEmitOnError": true,
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
          "@/*": ["src/*"],
          "@config/*": ["src/config/*"],
          "@controllers/*": ["src/controllers/*"],
          "@routes/*": ["src/routes/*"],
      }
  },
  "ts-node": {
      "require": [
          "tsconfig-paths/register"
      ]
  }
}